<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoutingInputActivity">

    <TextView
        android:id="@+id/selectOnMapTextView"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="18dp"
        android:background="@color/purple"
        android:elevation="2dp"
        android:paddingLeft="60dp"
        android:paddingTop="10dp"
        android:text="@string/selectOnMap"
        android:textColor="@color/light"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endTextView2" />

    <ImageView
        android:id="@+id/markerIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/marker"
        android:contentDescription="@string/contentDesc"
        android:elevation="3dp"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/selectOnMapTextView"
        app:layout_constraintStart_toStartOf="@+id/selectOnMapTextView"
        app:layout_constraintTop_toTopOf="@+id/selectOnMapTextView"
        app:srcCompat="@color/transparent" />

    <AutoCompleteTextView
        android:id="@+id/startTextView2"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/rounded_corner"
        android:inputType="textNoSuggestions"
        android:elevation="0dp"
        android:ellipsize="end"
        android:hint="@string/from"
        android:maxLines="2"
        android:paddingLeft="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topBar" />

    <AutoCompleteTextView
        android:id="@+id/endTextView2"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/rounded_corner"
        android:inputType="textNoSuggestions"
        android:elevation="0dp"
        android:ellipsize="end"
        android:hint="@string/to"
        android:maxLines="2"
        android:paddingLeft="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startTextView2" />

    <ImageView
        android:id="@+id/startIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/contentDesc"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/startTextView2"
        app:layout_constraintStart_toStartOf="@+id/startTextView2"
        app:layout_constraintTop_toTopOf="@+id/startTextView2"
        app:srcCompat="@drawable/start" />

    <ImageView
        android:id="@+id/endIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/contentDesc"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/endTextView2"
        app:layout_constraintStart_toStartOf="@+id/endTextView2"
        app:layout_constraintTop_toTopOf="@+id/endTextView2"
        app:srcCompat="@drawable/marker" />

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="31dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/back"
        android:contentDescription="@string/contentDesc"
        android:elevation="1dp"
        android:stateListAnimator="@null"
        app:layout_constraintStart_toStartOf="@+id/topBar"
        app:layout_constraintTop_toTopOf="@+id/topBar"
        app:srcCompat="@color/transparent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="236dp"
        android:layout_height="46dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="7dp"
        android:elevation="1dp"
        android:paddingTop="10dp"
        android:stateListAnimator="@null"
        android:text="@string/typeInfo"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/topBar"
        android:layout_width="410dp"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/contentDesc"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/background_light" />

</android.support.constraint.ConstraintLayout>